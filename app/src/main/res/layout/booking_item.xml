<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/curve_white_background"
    android:layout_margin="@dimen/gap_small"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewBooking"
        android:layout_width="@dimen/offer_image_width"
        android:layout_height="@dimen/offer_image_width"
        android:src="@drawable/coaching3"
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginBottom="@dimen/gap_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tutorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pad_large"
        android:text="@string/sample_text"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewBooking"
        app:layout_constraintTop_toTopOf="@+id/imageViewBooking" />

    <TextView
        android:id="@+id/tutorBookingStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pad_large"
        android:maxLines="1"
        android:paddingTop="@dimen/pad_small_3"
        android:text="Booking Status (Confirm/Pending/Failed)"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_text_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewBooking"
        app:layout_constraintTop_toBottomOf="@+id/tutorName" />

    <TextView
        android:id="@+id/tutorBookDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/pad_small"
        android:text="@string/sample_text"
        android:textSize="@dimen/small_text"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBooking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tutorName"
        app:layout_constraintTop_toBottomOf="@+id/tutorName"
        app:layout_constraintVertical_bias="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>