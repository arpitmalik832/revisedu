<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/tutor_near_item_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/gap_small"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/tutor_near_img"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/coaching2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/favourite_tn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_favorite_border_red_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tutor_near_img"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pad_small_3"
                android:paddingBottom="@dimen/pad_small_3"
                android:paddingStart="@dimen/pad_medium"
                android:paddingEnd="@dimen/pad_small_3"
                android:text="@string/sample_text"
                android:textColor="#000"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/favourite_tn" />

            <TextView
                android:id="@+id/name_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pad_small_3"
                android:paddingBottom="@dimen/pad_small_3"
                android:paddingStart="@dimen/pad_medium"
                android:paddingEnd="@dimen/pad_small_3"
                android:text="@string/place"
                android:textSize="@dimen/small_text"
                app:layout_constraintEnd_toEndOf="@+id/name"
                app:layout_constraintStart_toStartOf="@+id/name"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <TextView
                android:id="@+id/discount_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_local_offer_black_24dp"
                android:paddingTop="@dimen/pad_small_3"
                android:paddingBottom="@dimen/pad_small_3"
                android:paddingStart="@dimen/pad_medium"
                android:layout_marginBottom="@dimen/gap_small"
                android:paddingEnd="@dimen/pad_small_3"
                android:text="@string/discount_given"
                android:textColor="#000"
                android:textSize="@dimen/normal_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/name_place"
                app:layout_constraintStart_toStartOf="@+id/name_place"
                app:layout_constraintTop_toBottomOf="@+id/name_place" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="-15dp"
                android:layout_marginStart="@dimen/gap_medium"
                app:cardBackgroundColor="#F1E25B"
                app:cardCornerRadius="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/tutor_near_img"
                app:layout_constraintLeft_toLeftOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="4.5"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>